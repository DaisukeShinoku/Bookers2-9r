<div class="container">

	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--同コントローラーのviewで表示ならusersは省略可　？ -->

			<div class="row">
				<% unless @user.id == current_user.id %>
				  <% if @isRoom == true %>
    				<%= link_to "チャットへGo!", room_path(@roomId) %>
  				  <% else %>
    				<%= form_for @room do |f| %>
      					<%= fields_for @user_room do |e| %>
        				<%= e.hidden_field :user_id, :value=> @user.id %>
      					<% end %>
      				<%= f.submit "チャットを始める" %>
    				<% end %>
  				  <% end %>
				<% end %>
			</div>

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' ) %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td><%= "コメント数: #{book.book_comments.count}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
<!--books一覧 -->

<% if @user == current_user %>

<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['KEY']%>&callback=initMap" async></script>
<script type="text/javascript">
  var map;
  var marker;
  var geocoder;
  function initMap() {
    geocoder = new google.maps.Geocoder();
    geocoder.geocode({
    'address': '<%= @user.fulladdress %>' //住所
    }, function(results, status) {
      if (status === google.maps.GeocoderStatus.OK) {
      map = new google.maps.Map(document.getElementById('gmap'), {
        center: results[0].geometry.location,
        zoom: 17 //ズーム
     });
    marker = new google.maps.Marker({
    position: results[0].geometry.location,
    map: map
    });
    infoWindow = new google.maps.InfoWindow({
    content: '<h4>ツールチップのタイトル</h4>'
    });
    marker.addListener('click', function() {
      infoWindow.open(map, marker);
    });
    } else {
      alert(status);
    }
  });
}
</script>
<div id="gmap"></div>

<% end %>
