			<table class="table">
				<% book.book_comments.each do |book_comment| %>
				<tr>
					<!-- コメント一覧 非同期通信-->
					<td style="border:none;" >
						<%= link_to (book_comment.user) do %>
						<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50') %><br>
						<%= book_comment.user.name %>
						<% end %>
					</td>
					<td style="border:none;" ><%= book_comment.comment %></td>
					<% if book_comment.user == current_user %>
					<td style="border:none;" >
						<%= link_to "Destroy",book_book_comment_path(@book, book_comment[:id]), method: :delete, class: "btn-sm btn-danger", remote: true %>
					</td>
					<% end %>
					<!-- コメント一覧 非同期通信-->
				</tr>
				<% end %>
			</table>